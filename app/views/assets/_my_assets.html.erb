<div class="large-12 columns">
	<table width="100%">
  <thead>
    <th width="20%">
      Name
    </th>
    <th width="40%">
      Description
    </th>
    <th width="40%">
      Modified
    </th>
  </thead>

  <tbody>
  <% my_shared_assets.each do |asset| %>
    <tr class='asset-row' data-asset-name='<%= asset.name %>'>
      <td>
        <%= link_to asset.name, asset_path(asset) %>
      </td>
      <td>
        <%= asset.description %>
      </td>
      <td>
        <%= asset.updated_at %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
