<section class="row">

<div class="large-12 colums">

<h1>Asset: <%= @asset.name %></h1>


<span class="label-value">UUID:</span>
<p class="value"><%= @asset.uuid %></p>

<br />
<br />
<%= link_to "Borrowed Status", borrow_asset_url(@asset) %>
<br />
<br />

<span class="label-value">Description:</span>
<p class="value"><%= @asset.description %></p>

<span class="label-value">Notes:</span>
<p class="value"><%= @asset.notes %></p>

<span class="label-value">Is shared resource:</span>
<p class="value"><%= @asset.shared_resource? %></p>

<div>
  <h2>Asset History</h2>
  <%= render partial: "asset_logs/asset_logs_table", locals: { asset_logs: @asset_logs } %>
</div>

<hr>

<%= link_to "Back to index", assets_path, :class =>"button" %>

<%= link_to "Edit", edit_asset_path(@asset), :class =>"button" %>

<a href="#" class="button" data-reveal-id="printTagModel">
  Print QR Code Tag
</a> 

</div>

</section>

<div id="printTagModal" class="reveal-modal">
  <h2>Awesome. I have it.</h2>
  <p class="lead">Your couch.  It is mine.</p>
  <p>Im a cool paragraph that lives inside of an even cooler modal. Wins</p>
  <%= link_to "Print QR Code Tag", qrcode_asset_path(@asset, format: 'pdf'), html: {:class =>"button"} %>
  <a class="close-reveal-modal">&#215;</a>
</div>
